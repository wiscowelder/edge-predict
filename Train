name: Train Foundation

on:
  workflow_dispatch:  # Manual trigger from GitHub Actions tab

jobs:
  train:
    runs-on: ubuntu-latest
    timeout-minutes: 180  # 3 hours max â€” training can take 60-90 min

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python 3.11
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Run foundation training
        env:
          ODDS_API_KEY:    ${{ secrets.ODDS_API_KEY }}
          OPENWEATHER_KEY: ${{ secrets.OPENWEATHER_KEY }}
          BALLDONTLIE_KEY: ${{ secrets.BALLDONTLIE_KEY }}
        run: python brain.py --mode train

      - name: Save results to repository
        run: |
          git config user.name  "EDGE Predict Bot"
          git config user.email "bot@edge-predict"
          git add data.json
          git diff --staged --quiet || git commit -m "Training complete $(date -u +%Y-%m-%d)"
          git push
